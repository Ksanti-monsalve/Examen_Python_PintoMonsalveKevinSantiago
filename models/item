import uuid

class Item:
    def __init__(self, tipo, ingredientes, comida, chef, categoria=None, id=None):
        self.id = id or str(uuid.uuid4())
        self.tipo = tipo  
        self.ingredientes = ingredientes
        self.comida = comida
        self.chef = chef
        self.categoria = categoria

    def to_dict(self):
        return {
            "id": self.id,
            "tipo": self.tipo,
            "ingredientes": self.ingredientes,
            "comida": self.comida,
            "chef": self.chef,
            "categoria": self.categoria
        }

    @staticmethod
    def from_dict(data):
        return Item(
            tipo=data.get("tipo"),
            ingredientes=data.get("ingredientes"),
            comida=data.get("comida"),
            chef=data.get("chef"),
            categoria=data.get("categoria"),
            id=data.get("id")
        )